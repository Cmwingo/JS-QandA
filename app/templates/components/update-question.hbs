{{#if updateQuestionForm}}
  <h4>Update {{question.content}} by <i>{{question.author}}</i></h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input class="form-control" value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="content">Your Question</label>
        {{input class="form-control" value=content id="content" placeholder=question.content}}
      </div>

      <div class="form-group">
        <label for="notes">Additional Notes</label>
        {{input class="form-control" value=notes id="notes" placeholder=question.notes}}
      </div>

      <button {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
